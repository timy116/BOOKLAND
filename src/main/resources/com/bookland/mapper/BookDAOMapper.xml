<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bookland.dao.BookDAO">

    <resultMap id="BaseResultMap" type="com.bookland.entity.Book">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="bookNumber" property="bookNumber"/>
        <result column="price" property="price"/>
        <result column="publisher" property="publisher"/>
        <result column="description" property="description"/>
        <result column="category" property="category"/>
        <result column="imageUrl" property="imageUrl"/>
        <result column="createTime" property="createTime"/>
    </resultMap>

    <!-- 用於 PageHelper，做分頁所使用的 SQL -->
    <select id="listAllBooksByPage" resultMap="BaseResultMap">
        SELECT `id`, `name`, `bookNumber`, `price`, `publisher`, `description`, `category`, `imageUrl`, `createTime`
        FROM book
    </select>

    <select id="listBooksByPage" resultMap="BaseResultMap" parameterType="java.lang.String">
        SELECT `id`, `name`, `bookNumber`, `price`, `publisher`, `description`, `category`, `imageUrl`, `createTime`
        FROM book
        WHERE category = #{category}
    </select>

    <select id="retrieveAll" resultType="Book" parameterType="java.lang.String">
        SELECT `id`, `name`, `bookNumber`, `price`, `publisher`, `description`, `category`, `imageUrl`, `createTime`
        FROM book LIMIT 12
    </select>

    <select id="retrieveBooks" resultType="Book" parameterType="java.lang.String">
        SELECT `id`, `name`, `bookNumber`, `price`, `publisher`, `description`, `category`, `imageUrl`, `createTime`
        FROM book
        WHERE category = #{category} LIMIT 12
    </select>
</mapper>