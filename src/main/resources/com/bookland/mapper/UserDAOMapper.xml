<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bookland.dao.UserDAO">
    <insert id="create" parameterType="com.bookland.entity.User">
    INSERT INTO `user` (`userName`, `password`, `email`)
    VALUES (#{userName}, #{password}, #{email})
    </insert>

    <update id="updateLoginTime" parameterType="java.lang.String">
    UPDATE `user`
    SET `lastLogin` = now()
    WHERE `userName` = #{userName}
    </update>

    <select id="retrieveByUserName" resultType="User" parameterType="java.lang.String">
        SELECT `id`, `userName`, `password`, `email`, `phone`, `address`, `birthDate`, `lastLogin`, `createTime`
        FROM `user`
        WHERE `userName`= #{userName}
    </select>

    <select id="retrieveByEmail" resultType="User" parameterType="java.lang.String">
        SELECT `id`, `userName`, `password`, `email`, `phone`, `address`, `birthDate`, `lastLogin`, `createTime`
        FROM `user`
        WHERE `email` = #{email}
    </select>
</mapper>